<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin - REEM MOBILE TECH</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        :root {
            --primary-color: #ff6f16;
            --secondary-color: #1e293b;
            --accent-color: #ff6f16;
            --light-color: #f8fafc;
            --dark-color: #0f172a;
            --text-color: #334155;
            --text-light: #64748b;
            --white: #fff;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s ease;
            --border-radius: 12px;
        }

        .dashboard-container {
            min-height: 100vh;
            background: var(--light-color);
        }

        .dashboard-content {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .dashboard-content h1 {
            text-align: center;
            font-size: 42px;
            margin-bottom: 40px;
            color: var(--dark-color);
            font-family: 'Playfair Display', serif;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-bottom: 50px;
        }

        .stat-card {
            background: var(--white);
            padding: 30px;
            border-radius: var(--border-radius);
            text-align: center;
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: 1px solid rgba(255, 111, 22, 0.1);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .stat-number {
            font-size: 48px;
            font-weight: bold;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .stat-label {
            color: var(--text-light);
            font-size: 16px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .dashboard-card {
            background: var(--white);
            padding: 40px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            text-align: center;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 111, 22, 0.1);
        }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        }

        .dashboard-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        .dashboard-card h3 {
            margin-bottom: 20px;
            color: var(--dark-color);
            font-size: 24px;
            font-weight: 600;
            font-family: 'Playfair Display', serif;
        }

        .dashboard-card p {
            color: var(--text-light);
            margin-bottom: 30px;
            font-size: 16px;
            line-height: 1.6;
        }

        .dashboard-card .btn {
            display: inline-block;
            padding: 15px 30px;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            color: var(--white);
            text-decoration: none;
            border-radius: var(--border-radius);
            transition: var(--transition);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            cursor: pointer;
        }

        .dashboard-card .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 111, 22, 0.3);
        }

        @media (max-width: 768px) {
            .dashboard-content h1 {
                font-size: 32px;
            }
            
            .stat-number {
                font-size: 36px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <header class="header">
            <div class="container">
                <nav class="navbar">
                    <div class="logo">
                        <a href="/">REEM MOBILE TECH</a>
                    </div>
                    <ul class="nav-links">
                        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                        <li><a href="/manage-products"><i class="fas fa-box"></i> Produits</a></li>
                        <li><a href="/manage-categories"><i class="fas fa-tags"></i> Catégories</a></li>
                        <li><a href="/add-product"><i class="fas fa-plus"></i> Ajouter Produit</a></li>
                        <li><a href="/add-category"><i class="fas fa-plus-circle"></i> Ajouter Catégorie</a></li>
                        <li><a href="/"><i class="fas fa-external-link-alt"></i> Voir Site</a></li>
                        <li><button onclick="logout()" style="background: #dc3545; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer;"><i class="fas fa-sign-out-alt"></i> Déconnexion</button></li>
                    </ul>
                </nav>
            </div>
        </header>

        <main class="dashboard-content">
            <h1>Tableau de Bord</h1>
            
            <div class="stats-grid" id="stats-grid">
                <div class="stat-card">
                    <div class="stat-number" id="products-count">-</div>
                    <div class="stat-label">Produits</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="categories-count">-</div>
                    <div class="stat-label">Catégories</div>
                </div>
            </div>

            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <h3><i class="fas fa-box"></i> Gérer les Produits</h3>
                    <p>Ajoutez, modifiez ou supprimez des produits de votre catalogue avec une interface intuitive.</p>
                    <a href="/manage-products" class="btn">Gérer les Produits</a>
                </div>
                
                <div class="dashboard-card">
                    <h3><i class="fas fa-tags"></i> Gérer les Catégories</h3>
                    <p>Organisez vos produits en créant et gérant des catégories pour une meilleure navigation.</p>
                    <a href="/manage-categories" class="btn">Gérer les Catégories</a>
                </div>
                
                <div class="dashboard-card">
                    <h3><i class="fas fa-plus"></i> Ajouter un Produit</h3>
                    <p>Créez un nouveau produit pour votre catalogue avec toutes les informations nécessaires.</p>
                    <a href="/add-product" class="btn">Ajouter un Produit</a>
                </div>
                
                <div class="dashboard-card">
                    <h3><i class="fas fa-plus-circle"></i> Ajouter une Catégorie</h3>
                    <p>Créez une nouvelle catégorie pour organiser vos produits de manière logique.</p>
                    <a href="/add-category" class="btn">Ajouter une Catégorie</a>
                </div>
                
                <div class="dashboard-card">
                    <h3><i class="fas fa-external-link-alt"></i> Voir le Site</h3>
                    <p>Retournez à votre site web pour voir les changements et tester l'expérience utilisateur.</p>
                    <a href="/" class="btn">Voir le Site</a>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Global variables for admin session
        let adminSession = null;
        let csrfToken = null;

        // Check admin session on page load
        async function checkAdminSession() {
            try {
                const response = await fetch('/api/admin/check-session', {
                    method: 'GET',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const data = await response.json();
                    adminSession = true;
                    csrfToken = data.csrfToken;
                } else {
                    // Redirect to home page if not authenticated
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Error checking admin session:', error);
                window.location.href = '/';
            }
        }

        // Logout function
        async function logout() {
            try {
                const response = await fetch('/api/admin/logout', {
                    method: 'POST',
                    credentials: 'include'
                });

                if (response.ok) {
                    window.location.href = '/';
                } else {
                    alert('Logout failed');
                }
            } catch (error) {
                console.error('Logout error:', error);
                alert('Logout failed');
            }
        }

        // Load dashboard stats
        async function loadStats() {
            try {
                // Load products count
                const productsRes = await fetch('/api/products');
                const products = await productsRes.json();
                document.getElementById('products-count').textContent = products.length;

                // Load categories count
                const categoriesRes = await fetch('/api/categories');
                const categories = await categoriesRes.json();
                document.getElementById('categories-count').textContent = categories.length;
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            checkAdminSession();
            loadStats();
        });
    </script>
</body>
</html> 